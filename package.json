{
  "name": "electron-playgrounds",
  "productName": "Electron Playgrounds",
  "version": "0.0.0",
  "description": "Yet another opinionated setup for Electron application",
  "author": "Plusb Preco <plusb21@gmail.com>",
  "private": true,
  "main": "app/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "prepackage": "npm run build",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "build": "npm-run-all build:main build:renderer",
    "build:main": "webpack --progress",
    "build:renderer": "next build src && next export --outdir app/renderer src",
    "dev": "node scripts/serve.js",
    "package": "node scripts/package.js"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.4",
    "next": "^6.0.0-canary.6",
    "react": "^16.3.1",
    "react-dom": "^16.3.0",
    "styled-components": "^3.2.6"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.44",
    "@babel/plugin-proposal-export-default-from": "7.0.0-beta.44",
    "@babel/plugin-proposal-export-namespace-from": "7.0.0-beta.44",
    "@babel/preset-env": "7.0.0-beta.44",
    "@babel/preset-stage-1": "7.0.0-beta.44",
    "@zeit/next-css": "^0.1.4",
    "babel-loader": "8.0.0-beta.1",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-inline-dotenv": "^1.1.2",
    "babel-plugin-styled-components": "^1.5.1",
    "clean-webpack-plugin": "^0.1.19",
    "devtron": "^1.4.0",
    "electron": "^2.0.1",
    "electron-builder": "^20.13.4",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^4.19.1",
    "eslint-config-prev": "^7.0.0-beta.10",
    "execa": "^0.10.0",
    "exit-hook": "^2.0.0",
    "fs-extra": "^5.0.0",
    "globby": "^8.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.2",
    "next": "^6.0.0-canary.6",
    "npm-run-all": "^4.1.2",
    "source-map-support": "^0.5.4",
    "tempy": "^0.2.1",
    "tree-kill": "^1.2.0",
    "webpack": "3.10.0",
    "webpack-merge": "^4.1.2",
    "write-pkg": "^3.1.0"
  },
  "app": {
    "appDest": "app",
    "mainSource": "main",
    "rendererSource": "src",
    "cleanPaths": [
      "app"
    ],
    "externals": [
      "electron-next",
      "devtron",
      "electron-debug",
      "electron-devtools-installer"
    ],
    "build": {
      "appId": "com.electron.template",
      "directories": {
        "buildResources": "resources",
        "output": "build"
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
